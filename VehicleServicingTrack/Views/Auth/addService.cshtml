@{
    ViewData["Title"] = "Add Service";
}

<div class="row">
    <div class="col-4">
        <ul class="list-group">
            <li class="list-group-item">An item</li>
            <li class="list-group-item">A second item</li>
            <li class="list-group-item">A third item</li>
            <li class="list-group-item">A fourth item</li>
            <li class="list-group-item">And a fifth one</li>
        </ul>
    </div>
    <div class="col-8">
        <h3>Add Service</h3>
        <hr />
        <form method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="vno" class="form-label">Choose Vechicle</label>
                <select class="form-control">
                    <option value="1">Ba 2 Kha 2020</option>
                    <option value="1">Ba 2 Kha 2020</option>
                    <option value="1">Ba 2 Kha 2020</option>
                    <option value="1">Ba 2 Kha 2020</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="date" class="form-label">Service Date</label>
                <input type="date" class="form-control" id="date">
            </div>

            <div class="mb-3">
                <label for="km" class="form-label">Km Run</label>
                <input type="number" class="form-control" id="km">
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <input type="number" class="form-control" id="price">
            </div>
            <div class="mb-3">
                <label for="details" class="form-label">Additional Service Information</label>
                <textarea class="form-control" id="details" rows="3"></textarea>
            </div>
            <hr />
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>
